{
  "name": "mern-skeleton",
  "version": "1.0.0",
  "description": "skeleton setup for MERN projects",
  "main": "./server/server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "dev": "nodemon",
    "build:client": "yarn run type-check && webpack --config webpack.config.client.js",
    "build": "yarn run type-check && webpack --config webpack.config.client.production.js && webpack --mode=production --config webpack.config.server.js",
    "start": "NODE_ENV=production node ./dist/server.generated.js",
    "lint": "eslint client/**/* --fix",
    "prettify": "prettier server/**/* --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mycok/mern-skeleton.git"
  },
  "keywords": [
    "MERN"
  ],
  "author": "mycok",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mycok/mern-skeleton/issues"
  },
  "homepage": "https://github.com/mycok/mern-skeleton#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "@types/mongodb": "^3.5.25",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/superagent": "^4.1.8",
    "@types/supertest": "^2.0.10",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-hot-middleware": "^2.25.3",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": ">=4",
    "jest": "^26.1.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "superagent": "^5.3.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^2.5.0"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn run lint",
    "*.{js,css,md,ts,tsx,json,html}": "yarn run prettify"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,jsx}",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
